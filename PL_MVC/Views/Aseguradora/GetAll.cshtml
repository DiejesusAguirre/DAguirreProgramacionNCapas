@model ML.Aseguradora
@{
    ViewBag.Title = "Aseguradoras";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewBag.Title</h2>

<div class="container">
    <p>Aqui puede ver, editar o agrgar a una Aseguradora</p>
    <p>Para agregar a una Aseguradora presione el boton verde</p>
    <p>Para editar a una Aseguradora presione el boton amarillo</p>
    <p>Para eliminar una Aseguradora presione el boton rojo</p>

    <div class="row">
        <div style="float:right">
            @Html.ActionLink("Añadir +", "Form", "Aseguradora", htmlAttributes: new { @class = "btn btn-success" })
        </div>
    </div>

    <div class="row">

        <table class="table table-dark">
            <thead>
                <tr>
                    <th>Editar</th>
                    <th class="hidden">ID Aseguradora</th>
                    <th>Nombre de la Aseguradora</th>
                    <th>Fecha de Creacion</th>
                    <th>Fecha de Modificacion</th>
                    <th>Nombre del Usuario</th>
                    <th>Eliminar</th>
                </tr>
            </thead>
            <tbody>
                @foreach (ML.Aseguradora aseguradora in Model.Aseguradoras)
                {
                    <tr>
                        <td class="text-center"><a class="btn btn-warning glyphicon glyphicon-edit" href="@Url.Action("Form", "Aseguradora", new { IdAseguradora = aseguradora.IdAseguradora})"></a></td>
                        <td class="hidden">@aseguradora.IdAseguradora</td>
                        <td>@aseguradora.Nombre</td>
                        <td>@aseguradora.FechaCreacion</td>
                        <td>@aseguradora.FechaModificacion</td>
                        <td>@aseguradora.Usuario.Nombre @aseguradora.Usuario.ApellidoPaterno @aseguradora.Usuario.ApellidoMaterno</td>
                        <td class="text-center"><a class="btn btn-danger glyphicon glyphicon-trash" href="@Url.Action("Delete", "Aseguradora", new { IdAseguradora = aseguradora.IdAseguradora })" onclick="return confirm('Estas seguro que deseas eliminar este registro?');"><i class="bi bi-eraser-fill" style="color: mintcream"></i></a></td>

                    </tr>
                }
            </tbody>
        </table>
    </div>

</div>
